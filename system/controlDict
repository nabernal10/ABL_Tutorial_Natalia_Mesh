FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Make sure all utilities know specialised models
libs            (atmosphericModels);

application     simpleFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10000;

deltaT          1;

writeControl    timeStep;

writeInterval   500;

purgeWrite      0;

writeFormat     ascii;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

functions
{
	#includeFunc yPlus

    minMax
    {
        type            fieldMinMax;
        libs            (fieldFunctionObjects);
        fields          (U);
        writeControl    writeTime;
    }
	
		volField_volAverage
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        log             true;

        executeControl  timeStep;
        executeInterval 1;
        writeControl    timeStep;
        writeInterval   1;
        writeFields     false;

        regionType      all;
        operation       volAverage;
		fields
			(
				U
				//T
				// TLeaf
				p
				k
				epsilon
				// specHum
			);
    }
}


