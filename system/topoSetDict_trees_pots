FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(    
    // ðŸ”¹ Define vegetation (trees) porous zone
    {
        name        vegetation;
        type        cellZoneSet;
        action      new;
        source      boxToCell;
        sourceInfo
        {
            // Coordenadas (x_min y_min z_min) (x_max y_max z_max)
            // X: 10 m a 11.57 m
            // Y: 0 (yMin) a 11.35 m (yMax)
            // Z: 0.9 m (altura de la maceta) a 1.35 m (altura total)
            box (10 0 0.9) (11.57 11.35 1.35);
        }        
    }
    
    // ðŸ”¹ Define pot (maceta) porous zone
    {
        name        pots;
        type        cellZoneSet;
        action      new;
        source      boxToCell;
        sourceInfo
        {
            // Coordenadas (x_min y_min z_min) (x_max y_max z_max)
            // X: 10 m a 11.57 m
            // Y: 0 (yMin) a 11.35 m (yMax)
            // Z: 0.8 m (mesa) a 0.9 m (base de la planta)
            box (10 0 0.8) (11.57 11.35 0.9);
        }        
    }

    // ðŸ’¡ Si tambiÃ©n quieres modelar la mesa como un sÃ³lido/baffle,
    // puedes definir una zona de celdas para ella tambiÃ©n:
    /*
